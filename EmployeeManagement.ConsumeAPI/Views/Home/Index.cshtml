@model IEnumerable<Employee>
@{
    Layout = "_Layout"; ViewBag.Title = "All Employees";
}

<div class="row">

    <div class="col-md-4">
        <h2>All Employees:</h2>
    </div>
    <div class="col-md-8">
        <a asp-controller="ConsumeByjQuery" asp-action="AllEmployees" class="btn btn-sm btn-primary">Use jQuery</a>
    </div>

</div>


@*<a asp-action="GetEmployee" class="btn btn-sm btn-secondary">Get Employee</a>*@

<table class="table table-sm table-striped table-bordered m-2">
    <thead>
        <tr>
            <th style="text-align:center">Employee ID</th>
            <th style="text-align:center">First Name</th>
            <th style="text-align:center">Last Name</th>
            <th style="text-align:center">Email</th>
            <th style="text-align:center">Gender</th>
            <th style="text-align:center">Update</th>
            <th style="text-align:center">Delete</th>
            <th style="text-align:center">Details</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var r in Model)
        {
            <tr>
                <td style="text-align:center">@r.EmployeeId</td>
                <td style="text-align:center">@r.FirstName</td>
                <td style="text-align:center">@r.LastName</td>
                <td style="text-align:center">@r.Email</td>
                <td style="text-align:center">@r.Gender</td>
                <td style="text-align:center">
                    <a asp-action="UpdateEmployee" asp-route-id="@r.EmployeeId">
                        <i class="fa fa-hand-point-right"></i>
                        @*  <img src="/icon/edit.png" />*@
                    </a>
                </td>
                <td style="text-align:center">
                    <a asp-action="DeleteEmployee" asp-route-id="@r.EmployeeId">
                        <i class="fa fa-hand-point-right"></i>
                        @*  <img src="/icon/edit.png" />*@
                    </a>
                </td>
                <td style="text-align:center">
                    <a asp-action="EmployeeDetails" asp-route-id="@r.EmployeeId">
                        <i class="fa fa-hand-point-right"></i>
                        @*  <img src="/icon/edit.png" />*@
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<br />


<a asp-action="AddEmployee" class="btn btn-sm btn-primary">Add Employee</a>

